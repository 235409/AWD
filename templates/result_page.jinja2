{% extends "base_template.jinja2" %}
{% block title %}Wynik{% endblock %}
{% block content %}
    <div class="container elo">
        <h1 class="display-4 mordo">
            Twój grzyb według sieci to:
            <small class="text-muted">{{ mushroom_name }}</small>
        </h1>
        <div class="row">
            <div class="col">
              <img src="{{ url_for('static', filename=mushroom_picture) }}" class="rounded img-fluid" alt="...">
            </div>
            <div class="col">
              <img src="{{ url_for('static', filename=predicted_picture) }}" class="rounded img-fluid" alt="...">
            </div>
        </div>
        <h1 class="display-5">Predykcja sieci: {{ percent }}%</h1>
    </div>
{% endblock %}